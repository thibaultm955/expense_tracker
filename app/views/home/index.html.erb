<h1>Expenses</h1>

<%=link_to "Create Expanse", new_expense_path%>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Amount</th>
      <th>Category</th>
    </tr>
  </thead>
  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.created_at.strftime("%Y-%m-%d") %></td>
        <td><%= expense.description %></td>
        <td><%= expense.amount %></td>
        <td><%= expense.category.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
